<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_personagens"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".personagens.view.PersonagensFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarPersonagens"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000080"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageIconReturn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint=""
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/txtTitlePersonagem"
                android:layout_width="237dp"
                android:layout_height="54dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"

                android:background="@drawable/personagens"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imageIconReturn"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/txtTitlePersonagem"
                android:background="@drawable/golden_head"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitlePersonagem"
        android:id="@+id/recyclerItemPersonagens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_list_personagens"
        />

</FrameLayout>